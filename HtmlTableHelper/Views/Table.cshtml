@model HtmlTableHelper.ViewModel.TableViewModel

<table class="@Model.RootClasses">
    @if (Model.TableOptions.IsHeaderEnabled)
    {
        <thead>
            <tr>
                @foreach (var col in Model.RenamedHeader)
                {
                    <th>
                        @col
                    </th>
                }
            </tr>
        </thead>
    }
    <tbody>
        @foreach (var row in Model.Rows)
        {
            <tr>
                @for (int i = 0; i < Model.Header.Count; i++)
                {
                    <td>
                        @row[i]
                    </td>
                }
            </tr>
        }
    </tbody>
    @if (Model.TableOptions.IsFooterEnabled)
    {
        <tfoot>
        <tr>
            @foreach (var col in Model.RenamedFooter)
            {
                <th>
                    @col
                </th>
            }
        </tr>
        </tfoot>
    }
</table>
