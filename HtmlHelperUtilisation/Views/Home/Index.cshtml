@using System.Text.RegularExpressions
@using HtmlHelperUtilisation.Models
@using HtmlTableHelper
@using HtmlTableHelper.Injectors.Filters
@using HtmlTableHelper.Injectors.Converters
@using HtmlTableHelper.Logic
@using HtmlTableHelper.Models
@model  TestViewModel

<style>
    .tableColor {
        color: purple;
    }
</style>

@using (DisposableHtmlTable<RowViewModel> table = Html.DisplayTable(m => m.ListTest).Begin)
{
    table.ColFilter(new ColFilterList(ComparisonType.And, new RegexColFilter("2"), new RegexColFilter("1")), c => c.Col2);
    table.ColConverter(new RegexColConverter(new Regex("o"), "i"), m => m.Col1);
}